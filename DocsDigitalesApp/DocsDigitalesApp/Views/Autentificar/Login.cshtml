@model DocsDigitalesApp.Models.AutentificarModel

@{
    ViewBag.Title = "Login";
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <!-- Estilos y Bootstrap -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/login.css" rel="stylesheet" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <!--login modal-->
    <div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="text-center">Login</h1>
                </div>
                <div class="modal-body">

                    @using (Html.BeginForm("Login", "Autentificar", FormMethod.Post, htmlAttributes: new { @id = "FormLogin", @class = "form col-md-12 center-block" }))
                    { 
                        <div class="form-group">
                            @Html.TextBoxFor(u => u.correoElectronico,
                            htmlAttributes: new { @class = "form-control input-lg", @placeholder = "Correo Electrónico", @type = "email" })
                            @Html.ValidationMessageFor(u => u.correoElectronico)
                            <span id="errorCorreo" style="color: red; display: none">*Capturar Correo Electrónico</span>
                        </div>
                        
                        <div class="form-group">
                            @Html.PasswordFor(u => u.contrasena, htmlAttributes: new { @class = "form-control input-lg", @placeholder = "Contraseña" })
                            @Html.ValidationMessageFor(u => u.contrasena)
                            <span id="errorContrasena" style="color: red; display: none">*Capturar Contraseña</span>
                        </div>
                        
                        <div class="form-group">
                            <button id="btnIniciarSesion" type="submit" class="btn btn-primary btn-lg btn-block">Iniciar Sesión</button>
                        </div>
                             
                        if (TempData["Error"] != null)
                        {
                        <label style="color: red;">@TempData["Error"]</label>
                        }

                    }
                </div>
                <div class="modal-footer">
                    <div class="col-md-12">
                        @Html.ActionLink("Crear Usuario", "Create")
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery y archivos JavaScript -->
    <script src="/Scripts/jquery-1.9.1.min.js"></script>
    <script src="/Scripts/bootstrap.min.js"></script>
    <script src="/Scripts/login.js"></script>
</body>
</html>

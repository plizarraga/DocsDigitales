@model DocsDigitalesApp.Models.UsuarioModel

@{
    ViewBag.Title = "Create";
    Layout = null;  //"~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>

    <!-- Estilos y Bootstrap -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/login.css" rel="stylesheet" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body align="center">
    <div class="container">
        <form class="form-horizontal">
            <fieldset>

                <!-- Form Name -->
                <legend>Crear Usuario</legend>

                <div class="row" align="center">
                    <div class="col-xs-3">
                        <input type="text" class="form-control" placeholder="Nombre" required>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-3">
                        <input type="email" class="form-control" placeholder="Correo Electrónico" required>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-3">
                        <input type="text" class="form-control" placeholder="RFC" required>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-3">
                        <input type="text" class="form-control" placeholder="Empresa" required>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-3">
                        <input type="password" class="form-control" placeholder="Contraseña" required>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-xs-3">
                        <input type="password" class="form-control" placeholder="Contraseña" required>
                    </div>
                </div>
                
                <!-- Button -->
                <div class="row">
                    <div class="col-xs-3">
                        <button id="btnCrear" name="btnCrear" class="btn btn-primary btn-block" type="submit">Crear</button>
                    </div>
                </div>
            </fieldset>
        </form>

    </div>
    <!-- /container -->

    <!-- jQuery y archivos JavaScript -->
    <script src="/Scripts/jquery-1.9.1.min.js"></script>
    <script src="/Scripts/bootstrap.min.js"></script>
</body>
</html>



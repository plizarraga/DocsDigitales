@model DocsDigitalesApp.Models.UsuarioModel

@{
    ViewBag.Title = "Create";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>

    <!-- Estilos y Bootstrap -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/login.css" rel="stylesheet" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="container">
        @using (Html.BeginForm("Create", "Autentificar", FormMethod.Post,
            htmlAttributes: new { @id = "FormCreateUser", @class = "form-horizontal" }))
        {
            Html.ValidationSummary(true);
                
            <fieldset>

                <!-- Form Name -->
                <legend>Crear Usuario</legend>

                <div class="row">
                    <div class="col-xs-3">
                        @Html.TextBoxFor(u => u.Nombre, htmlAttributes: new { @class = "form-control", @placeholder = "Nombre" })
                        @Html.ValidationMessageFor(u => u.Nombre)
                    </div>
                    <div class="col-xs-3">
                        <span id="errorNombre" style="color: red; display: none;">*Ingrese su Nombre</span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-3">
                        @Html.TextBoxFor(u => u.CorreoElectronico, htmlAttributes: new { @class = "form-control", @placeholder = "Correo Electrónico", @type = "email" })
                        @Html.ValidationMessageFor(u => u.CorreoElectronico)
                    </div>
                    <div class="col-xs-3">
                        <span id="errorCorreo" style="color: red; display: none;">*Ingrese su Correo Electrónico</span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-3">
                        @Html.TextBoxFor(u => u.RFC, htmlAttributes: new { @class = "form-control", @placeholder = "RFC" })
                        @Html.ValidationMessageFor(u => u.RFC)
                    </div>
                    <div class="col-xs-3">
                        <span id="errorRFC" style="color: red; display: none;">*Ingrese su RFC</span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-3">
                        @Html.TextBoxFor(u => u.Empresa, htmlAttributes: new { @class = "form-control", @placeholder = "Empresa" })
                        @Html.ValidationMessageFor(u => u.Empresa)
                    </div>
                    <div class="col-xs-3">
                        <span id="errorEmpresa" style="color: red; display: none;">*Ingrese el nombre de su empresa</span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-3">
                        @Html.PasswordFor(u => u.Contrasena, htmlAttributes: new { @class = "form-control", @placeholder = "Contraseña" })
                        @Html.ValidationMessageFor(u => u.Contrasena)
                    </div>
                    <div class="col-xs-3">
                        <span id="errorContrasena" style="color: red; display: none;">*Ingrese su Contraseña</span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-3">
                        @Html.PasswordFor(u => u.ContrasenaConfirm, htmlAttributes: new { @class = "form-control", @placeholder = "Confirmar Contraseña" })
                        @Html.ValidationMessageFor(u => u.ContrasenaConfirm)
                    </div>
                    <div class="col-xs-3">
                        <span id="errorContrasenaConfirm" style="color: red; display: none;">*Confirme su Contraseña</span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-3">
                        <span id="errorContrasenas" style="color: red; display: none;">*No coinciden sus contraseñas</span>
                    </div>
                </div>

                <!-- Button -->
                <div class="row" style="margin-top: 5px;">
                    <div class="col-xs-3">
                        <input id="btnCrearUsuario" name="btnCrear" class="btn btn-primary btn-block" type="button" value="Crear" />
                        <input id="btn" name="btnCrear" class="btn btn-primary btn-block" type="button" value="Verificar Empresa" onclick="IfExistsEmpresa();" />
                    </div>
                </div>
            </fieldset>
        }


        @Html.ActionLink("Regresar", "Login")
    </div>
    <!-- /container -->

    <!-- jQuery y archivos JavaScript -->
    <script src="/Scripts/jquery-1.9.1.min.js"></script>
    <script src="/Scripts/jquery.validate.min.js"></script>
    <script src="/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="/Scripts/bootstrap.min.js"></script>

    <script type="text/javascript">

        function ValidarRequeridos() {

            var valido = false;

            if ($("#Nombre").val() == "") {

                $("#Nombre").addClass('error');
                $("#errorNombre").show();
                valido = false;
            }
            else {
                $("#Nombre").removeClass('error');
                $("#errorNombre").hide();
                valido = true;
            };

            if ($("#CorreoElectronico").val() == "") {

                $("#CorreoElectronico").addClass('error');
                $("#errorCorreo").show();
                valido = false;
            }
            else {
                $("#CorreoElectronico").removeClass('error');
                $("#errorCorreo").hide();
                valido = true;
            };

            if ($("#RFC").val() == "") {

                $("#RFC").addClass('error');
                $("#errorRFC").show();
                valido = false;
            }
            else {
                $("#RFC").removeClass('error');
                $("#errorRFC").hide();
                valido = true;
            };

            if ($("#Empresa").val() == "") {

                $("#Empresa").addClass('error');
                $("#errorEmpresa").show();
                valido = false;
            }
            else {
                $("#Empresa").removeClass('error');
                $("#errorEmpresa").hide();
                valido = true;
            };

            if ($("#Contrasena").val() == "") {

                $("#Contrasena").addClass('error');
                $("#errorContrasena").show();
                valido = false;
            }
            else {
                $("#Contrasena").removeClass('error');
                $("#errorContrasena").hide();
                valido = true;
            };

            if ($("#ContrasenaConfirm").val() == "") {

                $("#ContrasenaConfirm").addClass('error');
                $("#errorContrasenaConfirm").show();
                valido = false;
            }
            else {
                $("#ContrasenaConfirm").removeClass('error');
                $("#errorContrasenaConfirm").hide();
                valido = true;
            };

            if ($("#Contrasena").val() != "" && $("#ContrasenaConfirm").val() != "") {
                if ($("#Contrasena").val() !== $("#ContrasenaConfirm").val()) {
                    $("#Contrasena, #ContrasenaConfirm").addClass('error');
                    $("#Contrasena, #ContrasenaConfirm").val("");
                    $("#errorContrasenas").show();
                    valido = false;
                }
                else {
                    $("#Contrasena, #ContrasenaConfirm").removeClass('error');
                    $("#errorContrasenas").hide();
                    valido = true;
                };
            };

            return valido;
        };

        function AddUsuario() {
            var UsuarioModel = {
                nombre: $("#Nombre").val(),
                CorreoElectronico: $("#CorreoElectronico").val(),
                RFC: $("#RFC").val(),
                Empresa: $("#Empresa").val(),
                Contrasena: $("#Contrasena").val(),
                ContrasenaConfirm: $("#ContrasenaConfirm").val()
            };

            $.ajax({
                type: "POST",
                url: "Create",
                contentType: "application/json;charset=UTF-8",
                dataType: "json",
                data: JSON.stringify({ model: UsuarioModel }),
                success: function (msj) {
                    console.log(msj);
                },
                error: function (request, error) {
                    console.log("error");
                    alert(request.statusText);
                }
            })
        };

        function IfExistsEmpresa() {
            $.ajax({
                type: "POST",
                url: "IfExistEmpresa",
                contentType: "application/json;charset=UTF-8",
                dataType: "json",
                data: JSON.stringify({ Nombre: $("#Empresa").val() }),
                success: function (msj) {
                    if (msj) {
                        console.log("ya existe la empresa, no guardar usuario");
                    } else {
                        console.log("no existe la empresa, guardar el usuario");
                        AddUsuario();
                    };
                },
                error: function (request, error) {
                    console.log("error");
                    alert(request.statusText);
                }
            })
        };

        $(document).ready(function () {

            $("#btnCrearUsuario").on("click", function () {
                if (ValidarRequeridos()) {
                    IfExistsEmpresa();
                };
            });

        });
    </script>
</body>
</html>


